@page
@model HotelAppWeb.Pages.BookRoomModel
@{
    ViewData["Title"] = "Book a Room";
}
<h1>Book a Room</h1>

<h2>@Model.RoomType.Title</h2>

<p>@Model.RoomType.Description</p>
<form method="post">
    <div class=" form-group">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" />
    </div>
    <div class=" form-group">
        <label asp-for="@Model.LasteName"></label>
        <input asp-for="@Model.LasteName" />
    </div>
    <button type="submit" class="btn-primary">Book</button>
</form>

